---
import { getRelativeLocaleUrl } from "astro:i18n";
import Navbar from "../components/Navbar.astro";
import { getLangFromUrl } from "../i18n/utils";
import "../styles/global.css";
import { SEO } from "astro-seo";

const lang = getLangFromUrl(Astro.url);

const { title, section, SEOTitle, SEODescription } = Astro.props;

const description =
  SEODescription ||
  "Santiago Mind and Cognition - Grupo de investigación en filosofía de la mente y de las ciencias cognitivas.";
---

<html>
  <head lang={lang}>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link
      rel="alternate" type="application/rss+xml"
      title="Santiago Mind and Cognition"
      href={new URL("events.xml", Astro.site)}
    />
    <meta name="viewport" content="width=device-width" />
    <script
      src="https://kit.fontawesome.com/56ed2b6624.js"
      crossorigin="anonymous"></script>
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/gh/jpswalsh/academicons@1/css/academicons.min.css"
    />
    <SEO
      title=`${SEOTitle || title || "Home"} · Santiago Mind and Cognition`
      charset="UTF-8"
      description={description}
      openGraph={{
        basic: {
          title: "Santiago Mind and Cognition",
          image:
            "https://unsplash.com/photos/9A9TcXEsy6c/download?ixid=M3wxMjA3fDB8MXxhbGx8fHx8fHx8fHwxNzQ3MTg2NDM5fA&force=true&w=640",
          type: "website",
        },
      }}
      extend={{
        // extending the default meta tags
        meta: [
          {
            name: "twitter:title",
            content: `${title} · Santiago Mind and Cognition`,
          },
        ],
      }}
    />
  </head>
  <body>
    <div class="lg:max-w-[1320px] mx-auto px-4 my-5 lg:my-10">
      <Navbar />
      <div class="my-14">
        <a href={section ? getRelativeLocaleUrl(lang, section) : ""}
          ><h1 class="text-5xl mb-15">{title}</h1></a
        >
        <slot />
      </div>
    </div>
  </body>
</html>
