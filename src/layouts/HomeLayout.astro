---
import HomeLatestPublications from "../components/HomeLatestPublications.astro";
import HomeMenuBox from "../components/HomeMenuBox.astro";
import HomeUpcomingEventsList from "../components/HomeUpcomingEventsList.astro";
import { getLangFromUrl, useTranslations } from "../i18n/utils";
import BaseLayout from "./BaseLayout.astro";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<BaseLayout>
    <div class="flex flex-col gap-x-6 items-center">
        <div class="lg:w-2/3 mx-auto text-center">
            <h1 class="text-5xl lg:text-7xl pb-10 lg:py-10">
                Santiago Mind and Cognition
            </h1>
            <div><slot /></div>
        </div>
        <div class="flex border-y my-6 lg:w-full justify-around flex-wrap">
            <HomeMenuBox title={t("nav.members")} target="members" />
            <HomeMenuBox title={t("nav.events")} target="events" />
            <HomeMenuBox
                title={t("nav.reading-group")}
                target="reading-group"
            />
            <!-- <HomeMenuBox title={t("nav.wip")} target="wip" /> -->
            <HomeMenuBox title={t("nav.projects")} target="projects" />
            <HomeMenuBox title={t("nav.recordings")} target="recordings" />
        </div>
    </div>
    <div class="lg:grid lg:grid-cols-8 gap-x-12">
        <div class="col-span-3">
            <HomeUpcomingEventsList />
        </div>
        <hr class="lg:hidden my-6" />
        <div class="col-span-5">
            <HomeLatestPublications />
        </div>
    </div>
</BaseLayout>
