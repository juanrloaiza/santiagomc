---
import type { BookChapterPublication } from "../../types/publications";

const {
    title,
    authors,
    bookAuthors,
    bookTitle,
    year,
    publisher,
    pages,
    doi,
    url,
    openaccess,
} = Astro.props as BookChapterPublication;
---

{authors} ({year}). {title}. En {bookAuthors ? `${bookAuthors}, ` : ""}
<em>{bookTitle}</em>{pages ? `, ${pages}` : ""}.
{publisher}.
{doi || url}
{openaccess && <i class="ai ai-open-access text-orange-600" />}
