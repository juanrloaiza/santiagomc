---
import type { ArticlePublication } from "../../types/publications";
import { marked } from "marked"


const {
    authors,
    year,
    title,
    journal,
    volume,
    issue,
    pages,
    doi,
    url,
    openaccess,
} = Astro.props as ArticlePublication;

const renderedTitle = marked.parseInline(title)
---

{authors} ({year}). <span set:html={renderedTitle} />.
<em>{journal}{volume && `, ${volume}`}</em>{issue && `(${issue})`}{
    pages && `, ${pages}`
}.
{doi ? `doi: ${doi}` : url || ""}
