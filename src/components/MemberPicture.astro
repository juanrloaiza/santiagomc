---
import { Image } from "astro:assets";

const { alt, imagePath, class: className } = Astro.props;

const images = import.meta.glob<{ default: ImageMetadata }>(
    "/src/assets/imgs/*.{jpeg,jpg,png,JPG}",
);

const image = images[`/src/assets/imgs/${imagePath}`];
---

<Image src={image()} alt={alt} class={className} />