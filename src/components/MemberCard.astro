---
import MemberPicture from "./MemberPicture.astro";

const { name, imagePath, areas, url, role } = Astro.props;


---

<a href={url} class="max-w-70 flex flex-col items-center">
    <MemberPicture
        imagePath={imagePath}
        alt={name}
        class="max-w-60 aspect-square object-cover border-4 hover:border-6 rounded-full grayscale-20"
    />
    <h3 class="text-xl pt-3">{name}</h3>
    <div class="pb-2">{role}</div>
    <div class="text-center">
    {
        areas.map((area) => (
            <div class="inline-block mx-2 text-xs rounded">
                {area}
            </div>
        ))
    }</div>
</a>
